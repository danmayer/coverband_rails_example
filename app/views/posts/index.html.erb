<% if notice %>
  <p style="color: green"><%= notice %></p>
<% end %>

<h1><%= t('posts.title') %></h1>

<div id="posts">
  <% if @posts.any? %>
    <% @posts.each do |post| %>
      <%= render post %>
      <p>
        <%= link_to t('posts.show'), post %>
      </p>
    <% end %>
  <% else %>
    <p><%= t('hello') %></p>
  <% end %>
</div>

<%= link_to t('posts.new'), new_post_path %>
